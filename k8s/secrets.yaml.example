# Example secrets file - DO NOT commit actual secrets!
# Create your actual secrets with:
# kubectl create secret generic chess-tournament-secrets \
#   --from-literal=db_user=chess_app \
#   --from-literal=db_password=YOUR_PASSWORD \
#   --from-literal=secret_key=YOUR_SECRET_KEY \
#   -n chess-tournament

apiVersion: v1
kind: Secret
metadata:
  name: chess-tournament-secrets
  namespace: chess-tournament
  labels:
    app: chess-tournament
type: Opaque
stringData:
  db_user: "chess_app"
  db_password: "REPLACE_WITH_ACTUAL_PASSWORD"
  secret_key: "REPLACE_WITH_SECURE_SECRET_KEY"
